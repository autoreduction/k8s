apiVersion: v1
kind: ConfigMap
metadata:
  name: mysql-initdb-config
  namespace: "webapp"
data:
  initdb.sql: |
    CREATE DATABASE IF NOT EXISTS autoreduction;
    USE autoreduction;
    CREATE USER 'autoreduce'@'%' IDENTIFIED BY '{{ db_secrets.user_password}}';
    GRANT ALL PRIVILEGES ON autoreduction.* TO 'autoreduce'@'%';